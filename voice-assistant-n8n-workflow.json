    {
      "parameters": {
        "jsCode": "// Формируем ответ на основе результата функции\nconst functionName = $('extract-function-call').first().json.function_name;\nlet response = '';\n\nswitch(functionName) {\n  case 'create_task':\n    const taskArgs = $('extract-function-call').first().json.function_args;\n    response = `Задача \"${taskArgs.title}\" успешно создана.`;\n    break;\n    \n  case 'get_tasks':\n    const tasks = $input.first().json;\n    const taskStatus = $('extract-function-call').first().json.function_args.status || 'all';\n    \n    if (tasks.length === 0) {\n      response = `Задач со статусом \"${taskStatus}\" не найдено.`;\n    } else {\n      const taskList = tasks.slice(0, 5).map(task => `${task.title} (${task.status})`).join(', ');\n      response = `Найдено ${tasks.length} задач со статусом \"${taskStatus}\": ${taskList}${tasks.length > 5 ? ' и другие' : ''}.`;\n    }\n    break;\n    \n  case 'get_clients':\n    const clients = $input.first().json;\n    const clientStatus = $('extract-function-call').first().json.function_args.status || 'all';\n    \n    if (clients.length === 0) {\n      response = `Клиентов со статусом \"${clientStatus}\" не найдено.`;\n    } else {\n      const clientList = clients.slice(0, 3).map(client => `${client.name} (${client.conversion_stage})`).join(', ');\n      response = `Найдено ${clients.length} клиентов: ${clientList}${clients.length > 3 ? ' и другие' : ''}.`;\n    }\n    break;\n    \n  case 'get_leads_stats':\n    const leads = $input.first().json;\n    const period = $('extract-function-call').first().json.function_args.period;\n    \n    // Группируем по статусам\n    const statusCounts = leads.reduce((acc, lead) => {\n      acc[lead.conversion_stage] = (acc[lead.conversion_stage] || 0) + 1;\n      return acc;\n    }, {});\n    \n    const periodText = period === 'week' ? 'неделю' : 'месяц';\n    response = `За ${periodText} пришло ${leads.length} лидов. `;\n    \n    if (statusCounts['Назначен замер']) response += `Замеров назначено: ${statusCounts['Назначен замер']}. `;\n    if (statusCounts['Готовим смету']) response += `Смет в работе: ${statusCounts['Готовим смету']}. `;\n    if (statusCounts['Вышли на договор']) response += `Договоров: ${statusCounts['Вышли на договор']}. `;\n    \n    break;\n    \n  default:\n    response = 'Функция выполнена успешно.';\n}\n\nreturn { response };"
      },
